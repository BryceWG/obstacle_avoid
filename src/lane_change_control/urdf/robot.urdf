<?xml version="1.0"?>
<robot name="simple_robot">
  <!-- 道路平面 -->
  <link name="road_plane">
    <visual>
      <geometry>
        <box size="25.0 6.0 0.1"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

  <!-- 道路平面关节 -->
  <joint name="road_joint" type="fixed">
    <parent link="base_link"/>
    <child link="road_plane"/>
    <origin xyz="2.5 0 -0.05" rpy="0 0 0"/>
  </joint>

  <!-- 底盘 -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
      <origin xyz="0 0 0.15"/>
    </visual>

    <!-- X轴指示器（红色，指向前方） -->
    <visual name="x_axis">
      <geometry>
        <cylinder length="0.3" radius="0.01"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
      <origin xyz="0.15 0 0.15" rpy="0 1.5708 0"/>
    </visual>

    <!-- Y轴指示器（绿色，指向左侧） -->
    <visual name="y_axis">
      <geometry>
        <cylinder length="0.3" radius="0.01"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
      <origin xyz="0 0.15 0.15" rpy="1.5708 0 0"/>
    </visual>

    <!-- Z轴指示器（蓝色，指向上方） -->
    <visual name="z_axis">
      <geometry>
        <cylinder length="0.3" radius="0.01"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
    </visual>

    <!-- 方向箭头（黄色，指示车头方向） -->
    <visual name="direction_arrow">
      <geometry>
        <box size="0.2 0.05 0.02"/>
      </geometry>
      <material name="yellow">
        <color rgba="1 1 0 1"/>
      </material>
      <origin xyz="0.3 0 0.2" rpy="0 0 0"/>
    </visual>
  </link>

  <!-- Kinect相机 -->
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.073 0.276 0.072"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- 左前轮 -->
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- 右前轮 -->
  <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- 左后轮 -->
  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- 右后轮 -->
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- 障碍物 -->
  <link name="obstacle">
    <visual>
      <geometry>
        <box size="0.5 0.5 1.0"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- 相机关节 -->
  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.25 0 0.3" rpy="0 0 0"/>
  </joint>

  <!-- 左前轮关节 -->
  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.15 0.175 0.1" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- 右前轮关节 -->
  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.15 -0.175 0.1" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- 左后轮关节 -->
  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.15 0.175 0.1" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- 右后轮关节 -->
  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.15 -0.175 0.1" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- 障碍物关节（相对于base_link的固定变换） -->
  <joint name="obstacle_joint" type="fixed">
    <parent link="base_link"/>
    <child link="obstacle"/>
    <origin xyz="1.5 0 0.6" rpy="0 0 0"/>
  </joint>
</robot> 